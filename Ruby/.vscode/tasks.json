{
    "version": "2.0.0",
        "tasks": [
           {
             "label": "ruby",
             "command": "ruby",
             "args": [ "${file}" ],
             "group": {
               "kind": "build",
               "isDefault": true
             }
           },
           {
             "label": "rubocop",
             "command": "rubocop",
             "args": [ "--auto-correct", "${file}" ]
           }
        ]
}